<% if !@header.empty? -%>
# <%= @header %>
<% end -%>
<% if !@domain.empty? -%>
domain <%= @domain %>
<% end -%>
<% if @exclusive and @domain.empty? and !@search.empty? -%>
search <%= @search.join(' ') %>
<% elsif !@exclusive and !@domain.empty? -%>
search <%= @domain %>
<% end -%>
<% if !@options.empty? -%>
options <%= @options.join(' ') %>
<% end -%>
<% @nameserver.each do |ns| -%>
nameserver <%= ns %>
<% end -%>
<% if !@sortlist.empty? -%>
sortlist <%= @sortlist.join(' ') %>
<% end -%>
